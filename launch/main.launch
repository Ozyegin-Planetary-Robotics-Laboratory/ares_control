<?xml version="1.0"?>
<launch>
  
  <group ns="ares">
    <rosparam command="load" file="$(find ares_control)/config/ares.yaml" />
    <node pkg="ares_control" type="wheel_controller_node" name="front_left" output="screen" >
      <param name="id" value="1" /> 
    </node>
    <node pkg="ares_control" type="wheel_controller_node" name="front_right" output="screen" >
      <param name="id" value="2" /> 
    </node>
    <node pkg="ares_control" type="wheel_controller_node" name="rear_left" output="screen" >
      <param name="id" value="3" /> 
    </node>
    <node pkg="ares_control" type="wheel_controller_node" name="rear_right" output="screen" >
      <param name="id" value="4" />
    </node>
    <node pkg="ares_control" type="loco_controller_node" name="loco_controller" output="screen"  />
    <node pkg="ares_control" type="joystick_interface_node" name="joystick_interface" output="screen"  />
    <node pkg="joy" type="joy_node" name="joystick_node" output="screen" />
  </group>

</launch>